ACTOR AcceleratedBungholeExplosion
{
	+NOBLOCKMAP
	+NOGRAVITY
	+ALLOWPARTICLES
	+ALWAYSPUFF
	+PUFFONACTORS
	+PUFFGETSOWNER
	RenderStyle Translucent
	Alpha 0.8
	Scale 4
	Mass 5
	Projectile
	Deathsound "weapons/bungholeexplosion"
	Obituary "%o got fucking obliterated"
	States
	{
		Spawn:
			TNT1 A 0
			Goto Death
		Death:
			ABEX A 0 Bright A_Explode(150,250,XF_HURTSOURCE,0,100)
			ABEX BCDEFGHIJKLMNOP 3 Bright
			TNT1 A -1
			Stop
	}
}

