ACTOR ShuckleRocket  //i stole the doom rocket decorate code lmfao
{
  Radius 13
  Height 10
  Speed 50
  Projectile
  DeathSound "misc/explosion"
  Obituary "%k made %o experience a quake moment"
  Scale 2
  States
  {
  Spawn:
    RLPR AB 1 Bright
    Loop
  Death: 
	wrcx a 0 Bright A_Explode(80, 100,XF_HURTSOURCE,0,15)
	WRCX A 1 Bright 
	WRCX A 0 Bright A_SetScale(1.8,1.8)
	WRCX A 1 Bright A_FadeOut(0.1)
	WRCX A 0 Bright A_SetScale(1.6,1.6)
	WRCX A 1 Bright A_FadeOut(0.1)
	WRCX A 0 Bright A_SetScale(1.4,1.4)
	WRCX A 1 Bright A_FadeOut(0.1)
	WRCX A 0 Bright A_SetScale(1.2,1.2)
	WRCX A 1 Bright A_FadeOut(0.1)
	WRCX A 0 Bright A_SetScale(1.0,1.0)
	WRCX A 1 Bright A_FadeOut(0.1)
	WRCX A 0 Bright A_SetScale(0.8,0.8)
	WRCX A 1 Bright A_FadeOut(0.1)
	WRCX A 0 Bright A_SetScale(0.6,0.6)
	WRCX A 1 Bright A_FadeOut(0.1)
	WRCX A 0 Bright A_SetScale(0.4,0.4)
	WRCX A 1 Bright A_FadeOut(0.1)
