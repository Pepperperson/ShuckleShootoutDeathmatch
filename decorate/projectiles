ACTOR Manhole
{
	Radius 15
	Height 8
	Speed 80
	Damage (40)
	Scale 0.5
	Projectile
	DeathSound "weapons/punch"
	BounceSound "weapons/manholerico"
	Obituary "%o was filled with holes by a nailgun."
	BounceType Doom
	BounceCount 4
	States
	{
	Spawn:
		MHPR AB 1
		Loop
	Bounce:
		MHPR A 0 A_ChangeFlag("HITOWNER",1)
		Goto Spawn
	Death:
		TNT1 A 1
		Stop
	}
}