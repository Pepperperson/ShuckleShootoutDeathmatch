ACTOR HealthCandy : Health 16100
{
  //$Not Angled
  //$Category "Shuckle Shootout Pickups"
  //$Title "Health Candies (25 HP)"
  Inventory.Amount 25
  Inventory.PickupMessage "Ate some health candies!"
  Health.LowMessage 25, "Ate some REALLY tasty health candies!"
  Scale 0.5
  States
  {
  Spawn:
    HL25 A -1 Bright
    Stop
  }
}

