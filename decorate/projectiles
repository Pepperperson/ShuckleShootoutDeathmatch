ACTOR ShucklePill  //i stole the doom rocket decorate code lmfao
{
  Radius 13
  Height 10
  Speed 35
  Projectile
  Damage (10)
  -NOGRAVITY
  DeathSound "weapons/explosion2"
  Obituary "%o took a lethal dose"
  Scale 0.5
  States
  {
